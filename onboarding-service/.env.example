# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/onboard_db
VECTOR_DATABASE_URL=postgresql://postgres:password@localhost:5432/vector_db

# Redis/Celery Configuration
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# MinIO/S3 Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET_NAME=tenant-documents
MINIO_SECURE=false

# AWS S3 Configuration (alternative to MinIO)
AWS_REGION=us-east-1

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Onboarding Service

# Scraping Configuration
MAX_PAGES_PER_SITE=100
SCRAPING_DELAY=1.0

# Services
CHAT_SERVICE_URL=http://localhost:8000
AUTHORIZATION_SERVER_URL=http://localhost:9000

# OAuth2 Configuration
OAUTH2_CLIENT_ID=factorialbot-client
OAUTH2_CLIENT_SECRET=secret

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8

# Logging Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Paystack Payment Gateway
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key
PAYSTACK_WEBHOOK_SECRET=your-paystack-webhook-secret
PAYMENT_CALLBACK_URL=http://localhost:3000/payment/callback

# Billing Settings
DEFAULT_CURRENCY=NGN
SUBSCRIPTION_GRACE_PERIOD_DAYS=3
TRIAL_PERIOD_DAYS=14

# Database Pool Settings
POOL_SIZE=10
POOL_MAX_OVERFLOW=20
POOL_RECYCLE_SECONDS=3600

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=
RABBITMQ_PASSWORD=
RABBITMQ_EXCHANGE=topic-exchange
RABBITMQ_PLAN_UPDATE_ROUTING_KEY=plan.update
RABBITMQ_LOGO_UPDATE_ROUTING_KEY=logo.update