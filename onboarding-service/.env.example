# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/onboard_db
VECTOR_DATABASE_URL=postgresql://postgres:password@localhost:5432/vector_db

# Redis/Celery Configuration
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# MinIO/S3 Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET_NAME=tenant-documents
MINIO_SECURE=false

# AWS S3 Configuration (alternative to MinIO)
AWS_REGION=us-east-1

# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Onboarding Service

# Scraping Configuration
MAX_PAGES_PER_SITE=100
SCRAPING_DELAY=1.0

# Services
CHAT_SERVICE_URL=http://localhost:8000
AUTHORIZATION_SERVER_URL=http://localhost:9000
BILLING_SERVICE_URL=http://localhost:8002

# OAuth2 Configuration
OAUTH2_CLIENT_ID=factorialbot-client
OAUTH2_CLIENT_SECRET=secret

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Settings
PASSWORD_MIN_LENGTH=8

# Logging Configuration
LOG_LEVEL=INFO
ENVIRONMENT=development

# Note: Paystack and Billing configuration has been moved to the Billing Service
# The billing service (port 8002) handles all payment and subscription management

# Playwright Installation (Docker Containers Only)
# Controls whether Playwright + Chromium browser is installed at container runtime
# Set to "true" to enable JavaScript website scraping (adds 30-60s to first startup)
# Set to "false" to skip installation (faster startup, only requests-based scraping available)
# Default: true
# Note: This only applies when running in Docker. Local development always uses installed Playwright.
INSTALL_PLAYWRIGHT=true

# Database Pool Settings
POOL_SIZE=10
POOL_MAX_OVERFLOW=20
POOL_RECYCLE_SECONDS=3600

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=
RABBITMQ_PASSWORD=
RABBITMQ_EXCHANGE=topic-exchange
RABBITMQ_PLAN_UPDATE_ROUTING_KEY=plan.update
RABBITMQ_LOGO_UPDATE_ROUTING_KEY=logo.update